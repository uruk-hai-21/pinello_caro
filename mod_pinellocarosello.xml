<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
    <name>mod_pinellocarosello</name>
    <author>Publygoo</author>
    <creationDate>June 2022</creationDate>
    <copyright>Copyright (C) 2005 - 2022 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>info@publygoo.it</authorEmail>
    <authorUrl>www.publygoo.it</authorUrl>
    <version>1.3.0</version>
    <description>MOD_PINELLOCAROSELLO_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_pinellocarosello">mod_pinellocarosello.php</filename>
        <folder>tmpl</folder>
        <folder>assets</folder>
        <filename>mod_pinellocarosello.xml</filename>
        <filename>index.html</filename>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/mod_pinellocarosello.ini</language>
        <language tag="en-GB">en-GB/mod_pinellocarosello.sys.ini</language>
        <language tag="it-IT">it-IT/mod_pinellocarosello.ini</language>
        <language tag="it-IT">it-IT/mod_pinellocarosello.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_OUTSMARTITOWL" />
    <config>
        <fields name="params">

            <fieldset name="pc_items">
                <field name="pc_item" type="subform" label="COM_MODULES_IMAGES_FIELDSET_LABEL" multiple="true" layout="joomla.form.field.subform.repeatable-table">
                    <form>
                        <field name="pc_image" type="media" label="MOD_PINELLOCAROSELLO_FIELD_IMAGE_LABEL"/>
                        <field name="pc_alt" type="text" label="MOD_PINELLOCAROSELLO_FIELD_ALT_LABEL"/>
                        <field name="pc_title" type="text" label="MOD_PINELLOCAROSELLO_FIELD_TITLE_LABEL"/>
                        <field name="pc_caption" type="text" label="MOD_PINELLOCAROSELLO_FIELD_CAPTION_LABEL"/>
                        <field name="pc_link" type="url" label="MOD_PINELLOCAROSELLO_FIELD_LINK_LABEL"/>
                    </form>
                </field>
            </fieldset>

            <fieldset name="general">
                <!-- <field name="carousel_type"
                type = "list" label="MOD_PINELLOCAROSELLO_FIELD_TYPE_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_TYPE_DESC" default="I">
                    <option value="I">MOD_PINELLOCAROSELLO_IMAGES</option>
                    <option value="T">MOD_PINELLOCAROSELLO_TEXT</option>
                </field> -->
                
                <field  name="nrOfItems"
                        type = "integer"
                        label="MOD_PINELLOCAROSELLO_FIELD_ITEMS_LABEL"
                        description="MOD_PINELLOCAROSELLO_FIELD_ITEMS_DESC"
                        default="1"
                        first="1"
                        last="10"
                        step="1"/>

                <field name="autoplay"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_AUTOPLAY_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_AUTOPLAY_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="CarSpeed"
                type = "integer" showon="autoplay:1" label="MOD_PINELLOCAROSELLO_FIELD_SPEED_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_SPEED_DESC" default="3000" first="1000" last="10000" step="1000"/>
                <field name="thumbnailsnav"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_THUMBSNAV_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_THUMBSNAV_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field  name="thumbs_item"
                        showon="thumbnailsnav:1"
                        type = "integer"
                        label="MOD_PINELLOCAROSELLO_FIELD_ITEMS_THUMBS_LABEL"
                        description="MOD_PINELLOCAROSELLO_FIELD_ITEMS_THUMBS_DESC"
                        default="1"
                        first="1"
                        last="10"
                        step="1"/>

                <field name="loop"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_LOOP_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_LOOP_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="lazyLoad"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_LAZYLOAD_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_LAZYLOAD_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="lazyLoadEager"
                type = "integer" showon="lazyLoad:1" label="MOD_PINELLOCAROSELLO_FIELD_LAZYLOADEAGER_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_LAZYLOADEAGER_DESC" default="0" first="0" last="10" step="1"/>

                <field name="pagination"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_PAGINATION_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_PAGINATION_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="navigation"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_NAVIGATION_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_NAVIGATION_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="mycaption"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_ADDCAPTION_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_ADDCAPTION_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="bigcaption"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_BIGCAPTION_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_BIGCAPTION_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="add_jquery"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_JQUERY_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_JQUERY_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>

                </field>
                <field name="enable_fancybox"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_FANCYBOX_ENABLE_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_FANCYBOX_ENABLE_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="add_fancybox"
                type = "radio" class="btn-group" label="MOD_PINELLOCAROSELLO_FIELD_FANCYBOX_LABEL" description="MOD_PINELLOCAROSELLO_FIELD_FANCYBOX_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>

            <fieldset name="responsive_fieldset" label="MOD_PINELLOCAROSELLO_FIELD_RESPONSIVE">

                <field name="responsive" type="list" label="MOD_PINELLOCAROSELLO_FIELD_ARTICLEGROUPING_LABEL" default="0" validate="options">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="responsive_settings" type="subform" label="MOD_PINELLOCAROSELLO_FIELD_RESPONSIVE_BREAKPOINTS" multiple="true" showon="responsive:1" layout="joomla.form.field.subform.repeatable">
                    <form>
                        <field  name="breakpoint_resp"
                                type="text"
                                pattern="\d*"
                                hint="breakpoint from Value px up" 
                                label="MOD_PINELLOCAROSELLO_FIELD_RESPONSIVE_BREAKPOINT"/>

                        <field  name="nrOfItems_resp"
                                type = "integer"
                                label="MOD_PINELLOCAROSELLO_FIELD_ITEMS_LABEL"
                                description="MOD_PINELLOCAROSELLO_FIELD_ITEMS_DESC"
                                default="1"
                                first="1"
                                last="10"
                                step="1"/>

                        <field  name="thumbs_item_resp"
                                showon="thumbnailsnav:1"
                                type = "integer"
                                label="MOD_PINELLOCAROSELLO_FIELD_ITEMS_THUMBS_LABEL"
                                description="MOD_PINELLOCAROSELLO_FIELD_ITEMS_THUMBS_DESC"
                                default="1"
                                first="1"
                                last="10"
                                step="1"/>

                        <field  name="pagination_resp"
                                type = "radio"
                                class="btn-group"
                                label="MOD_PINELLOCAROSELLO_FIELD_PAGINATION_LABEL"
                                description="MOD_PINELLOCAROSELLO_FIELD_PAGINATION_DESC"
                                default="1">
                                <option value="1">JYES</option>
                                <option value="0">JNO</option>
                        </field>

                        <field  name="navigation_resp"
                                type = "radio"
                                class="btn-group"
                                label="MOD_PINELLOCAROSELLO_FIELD_NAVIGATION_LABEL"
                                description="MOD_PINELLOCAROSELLO_FIELD_NAVIGATION_DESC"
                                default="0">
                                <option value="1">JYES</option>
                                <option value="0">JNO</option>
                        </field>
                    </form>
                </field>

            </fieldset>

            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" class="form-select" validate="moduleLayout" />

                <field name="moduleclass_sfx" type="textarea" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" rows="3" validate="CssIdentifier" />

                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL" default="1" filter="integer" validate="options">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field name="cache_time" type="number" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" default="900" filter="integer" />

                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="mod_pinellocarosello">
            https://www.publygoo.it/updates/pinellocarosello.xml
        </server>
    </updateservers>
</extension>



